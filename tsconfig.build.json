{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "index.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "docs"
  ]
}